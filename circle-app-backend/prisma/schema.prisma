generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String? @unique
  email String @unique
  password String
  fullname String
  bio String?
  profilePhoto String?
  thumbnail String?

  role RoleEnum @default(MEMBER)

  threads Thread[]

  createdAt DateTime @default(now())
  updateAt DateTime @default(now()) @updatedAt

  @@map("users")
}

enum RoleEnum {
  ADMIN
  MEMBER
}

model Thread {
  id Int @id @default(autoincrement())
  content String
  image String?

  user User @relation(fields: [userId], references: [id])
  userId Int

  createdAt DateTime @default(now())
  updateAt DateTime @default(now()) @updatedAt

  @@map("threads")
}